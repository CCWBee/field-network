# Database
# For local development with SQLite:
# DATABASE_URL="file:./dev.db"
# For PostgreSQL (docker-compose or production):
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fieldnetwork?connection_limit=10&pool_timeout=30"

# Test Database (uses SQLite for fast isolated tests)
DATABASE_URL_TEST="file:./test.db"

# JWT
JWT_SECRET="your-secure-jwt-secret-change-in-production"

# Server
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# Redis (for background job queue)
REDIS_URL=redis://localhost:6379

# Object Storage Configuration
# STORAGE_PROVIDER: 'local' for file system (default), 's3' for S3-compatible storage
STORAGE_PROVIDER=local

# S3-compatible storage settings (required when STORAGE_PROVIDER=s3)
# Works with AWS S3, MinIO, Cloudflare R2, etc.
S3_BUCKET=field-network
S3_REGION=us-east-1
# For MinIO (local development):
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=fieldnetwork
S3_SECRET_ACCESS_KEY=fieldnetwork123
S3_FORCE_PATH_STYLE=true
# For AWS S3 (production), remove S3_ENDPOINT and S3_FORCE_PATH_STYLE:
# S3_ACCESS_KEY_ID=your-aws-access-key
# S3_SECRET_ACCESS_KEY=your-aws-secret-key

# Optional: CDN URL for serving files (overrides signed URLs for downloads)
# S3_PUBLIC_URL_BASE=https://cdn.field-network.com

# Local storage settings (when STORAGE_PROVIDER=local)
# STORAGE_DIR=./uploads
# API_BASE_URL=http://localhost:3001

# Escrow Provider (mock | onchain)
ESCROW_PROVIDER=mock

# On-chain Escrow Configuration (required when ESCROW_PROVIDER=onchain)
CHAIN_ID=84532
BASE_RPC_URL=https://sepolia.base.org
ESCROW_CONTRACT_ADDRESS=0x...
USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Operator wallet for escrow transactions (required for on-chain escrow)
OPERATOR_PRIVATE_KEY=0x...
